{
    "$schema": "http://json.schemastore.org/template",
    "author": "SirKingBinx",
    "classifications": [ "Library" ],
    "identity": "bingus.modtemplate",
    "name": "Gorilla Tag Mod Template [Expanded]",
    "shortName": "gtmod-expanded",
    "sourceName": "GTModTemplateExpanded",
    "tags": {
        "type": "project",
        "platform": "Windows",
        "language": "C#"
    },
    "symbols": {
        "Name": {
            "type": "parameter",
            "defaultValue": "MyMod",
            "replaces": "**MODNAME**",
            "datatype": "text",
            "description": "Name of the mod",
            "isRequired": true
        },
        "GUID": {
            "type": "parameter",
            "defaultValue": "myname.mymod",
            "replaces": "**GUID**",
            "datatype": "text",
            "description": "GUID (Global Unique Identifier) of the mod. No spaces!",
            "isRequired": true
        },
        "GorillaTagLocation": {
            "type": "parameter",
            "defaultValue": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Gorilla Tag",
            "replaces": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Gorilla Tag",
            "datatype": "text",
            "description": "Where your Gorilla Tag install is located"
        }
    }
}